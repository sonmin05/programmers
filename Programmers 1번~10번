```c
#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define LEN_INPUT 10

int main(void) {
    char s1[9]; // NULL ë¬¸ìë¥¼ í¬í•¨í•œ ë°°ì—´ì„ ì„ ì–¸í•©ë‹ˆë‹¤.
    scanf("%s", s1); // ìµœëŒ€ 9ê°œì˜ ë¬¸ìë¥¼ ì…ë ¥ë°›ìŠµë‹ˆë‹¤.

    int len = strlen(s1);
    for(int i = 0; i < len; i++) {
        if(islower(s1[i]))
        {
            s1[i] = toupper(s1[i]);
        }
        else if(isupper(s1[i])) 
        {
            s1[i] = tolower(s1[i]);
        }
    }

    printf("%s", s1);
    return 0;
}
```

