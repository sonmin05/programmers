```c
#include <stdio.h>
#define LEN_INPUT1 11
#define LEN_INPUT2 11

int main(void) {
    char s1[LEN_INPUT1];
    char s2[LEN_INPUT2];
    char s3[23];
    int i,j;
    scanf("%s %s", s1, s2);
    for(i=0; s1[i]!='\0'; i++){
        s3[i]=s1[i];
    }
    for(j=i; s2[j-i]!='\0'; j++){
        s3[j]=s2[j-i];
    }
    s3[j]='\0';
    puts(s3);
    return 0;
}
```

